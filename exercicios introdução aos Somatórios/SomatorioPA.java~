class SomatorioPA
{
  public static int somatorio(int a, int b, int n)
  {
	  int p = (a+(a+(n*b)))*(n+1)/2;
	  return p;
  }
	public static void main (String args[])
	{
             int a = MyIO.readDouble();
	     int b = MyIO.readDouble();
	     int n = MyIO.readInt();
	     int res = somatorio(a, b , n);
	     MyIO.println(res);
	}
}

